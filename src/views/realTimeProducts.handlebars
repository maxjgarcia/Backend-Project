<div class="container">
  <h2>Agregar Producto</h2>
  <div class="form-container">
    <form id="form" onsubmit="handleSubmit(event)" class="form-content">
      <div class="form-inputlabel">
        <label for="title">Nombre:</label>
        <input type="text" id="title" name="title" required />
        <br />
      </div>

      <div class="form-inputlabel">
        <label for="description">Descripción:</label>
        <input type="text" id="description" name="description" required />
        <br />
      </div>

      <div class="form-inputlabel">
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" required />
        <br />
      </div>

      <div class="form-inputlabel">
        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" required />
        <br />
      </div>

      <div class="form-inputlabel">
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required />
        <br />
      </div>

      <div class="form-submitbtn">
        <button type="submit">Agregar producto</button>
      </div>
    </form>
  </div>

  <h2>Lista de Productos</h2>
  <table id="productsTable">
    <tr>
      <th><span>ID</span></th>
      <th><span>Nombre</span></th>
      <th><span>Descripción</span></th>
      <th><span>Categoría</span></th>
      <th><span>Precio</span></th>
      <th><span>Stock</span></th>
      <th><span>¿Eliminar?</span></th>
    </tr>
    {{#each products}}
      <tr>
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>{{category}}</td>
        <td>{{price}}</td>
        <td>{{stock}}</td>
        <td><button
            id={{id}}
            onclick="handleDelete(event, {{id}})"
            class="deleteBtn"
          >❌</button></td>
      </tr>
    {{/each}}
  </table>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>